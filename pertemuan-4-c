// Online C compiler to run C program online
#include <stdio.h>
#include <stdlib.h>
// Pertemuan 5  PErcobaan

void soal1(){
  float suhuCelcius, suhuFahrenheit;

    printf("Masukkan Suhu dalam Celcius=  ");
    scanf("%f", &suhuCelcius);
    
    suhuFahrenheit = (suhuCelcius * 9/5) + 32;
    printf("Suhu dalam fahrenheit adalah = %2.f \n", suhuFahrenheit);
}

void soal2(){
    // Deklarasi variabel
    float gajiPokok, tunjanganIstriSuami, tunjanganAnak, thr, pajak, bantuanTransport, polisAsuransi, totalPendapatan;
    int jumlahAnak, masaKerja, hariMasukKerja;

    // Input gaji pokok, tunjangan istri/suami, jumlah anak, masa kerja, dan jumlah hari masuk kerja
    printf("Masukkan gaji pokok: ");
    scanf("%f", &gajiPokok);

    printf("Masukkan tunjangan istri/suami: ");
    scanf("%f", &tunjanganIstriSuami);

    printf("Masukkan jumlah anak: ");
    scanf("%d", &jumlahAnak);

    printf("Masukkan masa kerja (tahun): ");
    scanf("%d", &masaKerja);

    printf("Masukkan jumlah hari masuk kerja: ");
    scanf("%d", &hariMasukKerja);

    // Menghitung THR
    thr = 5000 * masaKerja;

    // Menghitung tunjangan anak
    tunjanganAnak = 0.05 * gajiPokok * jumlahAnak;

    // Menghitung pajak
    pajak = 0.15 * (gajiPokok + tunjanganIstriSuami + tunjanganAnak);

    // Menghitung bantuan transport
    bantuanTransport = 3000 * hariMasukKerja;

    // Menghitung total pendapatan bulanan
    totalPendapatan = gajiPokok + tunjanganIstriSuami + tunjanganAnak + thr - pajak + bantuanTransport - 20000;

    // Menampilkan total pendapatan bulanan
    printf("Total pendapatan bulanan karyawan: Rp %.2f\n", totalPendapatan);

}

void soal3(){
    int jmlTiket;
    int jm3,sm3;
    int biaya;
    printf("Masukkan Jumlah Tiket yang dibeli : ");
    scanf("%d", &jmlTiket);
    
    jm3 = jmlTiket/3;
    sm3 = jmlTiket % 3;
    
    biaya =  (jm3 * (2 * 50000)) + (sm3 * 50000);
    printf("Biaya yang harus dibayar : Rp %d,\n", biaya);
}


//  Pertemuan 5 Resmi 
int main() {
    // Write C code here
    // printf("Hello world");

soal1();
    return 0;
}
