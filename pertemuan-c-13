// Implementasi fungsi triangular
void triangular(int n) {
    int hasil = 0;

    for (int i = 1; i <= n; i++) {
        hasil += i;
    }

    printf("Jumlah triangular dari %d adalah %d\n", n, hasil);
}


float kuadrat(float n){
    float total; 
    
    total = n * n;
    
    printf("Kuadrat adalah %2f\n", total);
}

int calculateC(int n) {
    if (n == 0) {
        return 1; // Basis: C0 = 1
    } else {
        return 2 * calculateC(n - 1) + 1;
    }
}

// Fungsi untuk menghitung Sn
int calculateS(int n) {
    if (n == 1) {
        return 0; // Basis: S1 = 0
    } else {
        return calculateS(n - 1) + n - 1;
    }
}
